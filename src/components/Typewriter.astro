---
// filepath: src/components/Typewriter.astro
const { text, speed = 60 } = Astro.props;
---

<span id="typewriter"></span>

<script is:inline>
  const text = {JSON.stringify(text)};
  const speed = {speed};
  let i = 0;
  function typeWriter() {
    if (i < text.length) {
      document.getElementById("typewriter").innerHTML += text.charAt(i);
      i++;
      setTimeout(typeWriter, speed);
    }
  }
  typeWriter();
</script>